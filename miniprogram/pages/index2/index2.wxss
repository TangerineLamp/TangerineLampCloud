/* pages/index2/index2.wxss */

/* 子元素居中通用样式设置 */
.in_mid{
  display: flex;
  justify-content: center;
  align-items: center;
}
/* 子元素水平居中垂直顶格通用样式 */
.in_top{
  display: flex;
  justify-content: center;
  align-items: flex-start;
}
/* 通用占位样式 */
.blank {
  width: 100%;
  height: 20rpx;
}
.page{
  background-color: #efefef;
}
/***********************************标题部分***********************************/
/* 顶部装载标题的空白容器 */
.topcontainer{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50%;
  height: 100rpx;
  background-color: #fff3eb;
  border-radius: 30rpx;
  padding-left: 2%;
  padding-right: 2%;
  padding-top: 2%;
  padding-left: 23%;
  color: #ff9933;
  font-size: 40rpx;
  font-weight: bold;
}
/*标题*/
