/***********************************轮播图部分***********************************/
.swipercontainer{
  border-bottom: 20rpx solid #efefef;
}
.slide{
  height: 450rpx;
  width: 90%;
  border-radius: 20rpx;
  overflow:hidden;
  margin-left: 5%;
  margin-right: 5%;
  margin-top: 5%;
  margin-bottom: 5%;
}
.slide-image{
  width: 100%;
}
/***********************************选择图标部分***********************************/
/* 装载树洞首页的空白容器 */
.bottomcontainer{
  width: 100%;
  height: auto;
  display: flex;
  border-bottom: 10rpx solid #efefef;
}
/* 图标容器 */
.imgcontainer{
  width: 80%;
  height: 60%;
}
/*首页通用标准图片大小样式*/
.stdimg{
  width: 50rpx;
  height: 50rpx;
}
/* 图片容器中的一级子容器 */
.imghalf{
  width: 100%;
  height: 50%;
  justify-content: space-around;
}
/* 图片容器只能中的二级子容器 */
.singleimg{
  flex-direction: column;
  display: flex;
  align-items: center;
  justify-content: space-around;
  background-color: #fff;
}
/* 设置图标下面的内容 */
.case_info {
  color: #8B8A8A;
  font-size: 35rpx;
}
/***********************************编辑入口***********************************/
/* 按钮的容器 */
.editbuttoncontainer .in_mid{
  display: flex;
  width: 100%;
  height: 40rpx;
}
/* 圆形按钮的样式 */
.circle{
  background-color: #ff9933;
  border: 0 solid #ffffff;
  box-shadow: 6rpx 1rpx 1rpx #cccccc;
  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  bottom: 1%;
  color: #fff;
  font-size: 60rpx;
  border-radius: 50%;
}